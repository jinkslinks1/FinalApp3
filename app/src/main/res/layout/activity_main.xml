<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jai.finalapp.MainActivity"
    android:background="@drawable/moviebackground">

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMovieName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:id="@+id/btnAdd"
        android:onClick="addMovie" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnEdit"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnDelete"
        android:onClick="deleteMovie" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/tvDisplay"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_centerHorizontal="true"
        android:onClick="editMovie" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etMovieName"
        android:layout_marginTop="21dp"
        android:hint="    EnterComments"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnScores"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnLogout"
        android:onClick="logOut" />

    <Button
        android:text="Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnScores"
        android:layout_alignTop="@+id/btnPlay"
        android:layout_alignStart="@+id/btnEdit" />

    <Button
        android:text="Play Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:onClick="playGame (MainActivity)" />

</RelativeLayout>
